@code{

    private bool Ativo { get; set; } = false;

    protected override void OnInitialized()
    {
        if (VarGlobal.NomeUsuario != null) Ativo = true;
    }


    private void Clientes()
    {
        ToPag.NavigateTo("/listclientes");
    }

    private void Produtos()
    {
        ToPag.NavigateTo("/listprodutos");
    }

    public void Login()
    {
        ToPag.NavigateTo("/login");
    }
}
