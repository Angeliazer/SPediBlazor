@attribute [StreamRendering]
@rendermode InteractiveServer

<div class="navbar">
    <img src="/images/pngwing.png" class="logotipo" />

    <span class="text-center">Sistema de Pedido</span>

    <button class="button-normal" @onclick="Clientes">
        <img src="/images/cliente.png" class="icon" />
        Clientes
    </button>

    <button class="button-normal" @onclick="Produtos">
        <img src="/images/produtos.png" class="icon" />
        Produtos
    </button>

    <button class="button-login" @onclick="()=>Login()">
        <img src="/images/bag.png" class="icon" />
        Login
    </button>

</div>

